{
  "name": "shift-calendar",
  "version": "1.0.0",
  "description": "Employee Shift Calendar System",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-server && npm run install-client",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/shift-calendar.git"
  },
  "keywords": [
    "shift",
    "calendar",
    "employee",
    "scheduler",
    "mern"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/shift-calendar/issues"
  },
  "homepage": "https://github.com/yourusername/shift-calendar#readme",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
} 